\newenvironment{formula3}[8]{
    IC(1-\alpha)\%= \hat{P} \pm Z_\frac{\alpha}{2} * \sqrt{\frac{\hat{P}*(1-\hat{P})}{n}}

    IC(#1)\% = #2 \pm #3 * \sqrt{\frac{#2*(#4)}{#5}} 

    IC(#1)\% = #2 \pm #6

    IC(#1)\% = [#7 ; #8]
}

\newenvironment{formula1}[8]{
    IC(1-\alpha)\%= \bar{x} \pm Z*\frac{\alpha}{2} * \frac{\sigma}{\sqrt{N}}
                  
    IC(#1)\% = #2 \pm #3 * \frac{#4}{\sqrt{#5}}

    IC(#1)\% = #2 \pm #6

    IC(#1)\% = [#7 ; #8]
}


